---
import Page from "../zh/Page.astro";
const { title, noscript, bar_index } = Astro.props.frontmatter;
import Paper from "@/components/Paper.astro";
---

<Page title={title} noscript={noscript} bar={{ index: bar_index }}>
  <Paper padding>
    <article lang="en">
      <slot />
    </article>
  </Paper>
</Page>

<style>
  article {
    font-family: "Noto Sans", Tahoma, sans-serif;
    font-size: 120%;
    text-align: left;
    max-width: 1024px;
    margin: auto;
    padding-left: 32px;
    padding-right: 28px;
    line-height: 200%;
  }
  footer {
    margin-top: 32px;
    margin-bottom: 32px;
  }
</style>
