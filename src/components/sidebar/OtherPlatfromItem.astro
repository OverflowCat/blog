---
export interface Props {
  href: string;
  icon: string;
  rel?: string;
}

import { Icon } from "astro-icon/components";

const { href, icon, rel } = Astro.props;
---

<a href={href} rel={rel} target="_blank">
  <span class="icon">
    <Icon name={icon} />
  </span>
  <span class="name">
    <slot />
  </span>
</a>

<style lang="less">
  a {
    display: block;
    width: 105px;
    border-bottom: 0px;
    border-radius: 4px;
    box-sizing: border-box;
    display: inline-block;
    color: #333333;
    text-align: center;
    text-decoration: none;
    padding: 5px 2px;
    font-size: 13px;
    white-space: nowrap;
    transition: background-color 0.1s ease-in-out;
    &:hover {
      background-color: #eee;
    }
    &:focus {
      background-color: #ddd;
    }
  }
  .icon {
    display: inline-block;
    width: 15px;
    height: 15px;
    margin: 0 2px;
  }
  .icon,
  .name {
    vertical-align: middle;
  }
</style>
