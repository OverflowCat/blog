---
import Page from "./Page.astro";
const title = Astro.props.data.title;
import Paper from "@/components/Paper.astro";
---

<Page title={title}>
  <Paper padding={true}>
    <slot />
  </Paper>
</Page>

<style>
  a,
  a:visited {
    color: #3498db;
  }

  a:hover,
  a:focus,
  a:active {
    color: #2980b9;
  }
  img {
    width: 100%;
    max-width: 600px;
  }
</style>

<style is:global>
  .paper {
    font-family: "Noto Sans CJK SC";
    font-size: 18px;
    text-align: left;
    max-width: 1024px;
    margin: auto;
    padding: 16px;
    line-height: 200%;
  }
</style>
