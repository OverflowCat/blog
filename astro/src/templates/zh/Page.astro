---
export interface Props {
  title: string;
  bar_index?: number;
  noscript?: boolean;
}

const { title, bar_index, noscript } = Astro.props;
import Base from "./Base.astro";
import Bar from "./Bar.astro";
import Footer from "../zh/Footer.astro";
---

<Base title={title + " | 新世界的大门"}>
  <Bar index={bar_index} />
  <main>
    <slot />
  </main>
  <Footer noscript={noscript} />
</Base>

<style>
  main {
    padding: 16px;
    margin: 8px auto;
  }
</style>
