---
export interface Props {
  theme?: "light" | "dark" | "transparent";
}
const light =
  "https://user-images.githubusercontent.com/20166026/203770324-bafac264-f05f-4ce4-b944-d28e5de06e0d.svg";
const dark =
  "https://user-images.githubusercontent.com/20166026/203767771-c977f2cb-30da-49a9-8936-761fc4ee3450.svg";
const transparent = "/logo.svg";

const theme = Astro.props.theme || "dark";
const url = theme === "light" ? light : theme === "dark" ? dark : transparent;
---

<img
  width="220px"
  src={url}
  aria-label="新世界的大門"
  alt="新世界的大门 logo"
/>

<style>
  img {
    display: block;
    margin: 0 auto;
  }
</style>
