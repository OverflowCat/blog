---
import Page from "./Page.astro";
const title = Astro.props.data.title;
import Paper from "@/components/Paper.astro";
---

<link rel="stylesheet" href="/prism.css" />
<Page title={title}>
  <Paper padding={true}>
    <article>
      <slot />
    </article>
  </Paper>
</Page>

<style>
  a,
  a:visited {
    color: #3498db;
  }

  a:hover,
  a:focus,
  a:active {
    color: #2980b9;
  }
</style>

<style is:global>
  .paper {
    max-width: 1024px;
    margin: auto;
  }
  article {
    font-family: "Noto Sans CJK SC", "Open Sans", "Helvetica Neue", Helvetica,
      Arial, sans-serif;
    font-size: 20px;
    text-align: left;
    line-height: 200%;
    margin: 18px;
  }
  /* image in article */
  article img {
    max-height: 800px;
    max-width: 800px;
    width: 100%;
    height: auto;
    display: block;
    margin: auto;
  }
</style>
