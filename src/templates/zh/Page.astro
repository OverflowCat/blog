---
export interface Props {
  title: string;
  noscript?: boolean;
  bar?: {
    index?: number;
    transparent?: boolean;
  };
  og?: OpenGraphData;
}

const { title, bar, noscript, og } = Astro.props;

import Base from "./Base.astro";
import Bar from "./Bar.astro";
import Footer from "../zh/Footer.astro";
import { genOg, type OpenGraphData } from "@/scripts/open-graph";
---

<Base title={title + " | 新世界的大门"} metas={og && genOg(og)}>
  <Bar {...bar} />
  <div class="main">
    <slot />
  </div>
  <Footer noscript={noscript} />
</Base>

