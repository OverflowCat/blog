---
import Page from "./Page.astro";
const title = Astro.props.data.title;
import Paper from "@/components/Paper.astro";
import "@/styles/article.less";
---

<Page title={title}>
  <Paper padding={true}>
    <article>
      <slot />
    </article>
  </Paper>
</Page>

<style>
  a,
  a:visited {
    color: #3498db;
  }

  a:hover,
  a:focus,
  a:active {
    color: #2980b9;
  }
</style>

<style is:global>
  .paper {
    max-width: 1024px;
    margin: auto;
  }
</style>
