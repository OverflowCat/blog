---
import Paper from "@/components/FakePaper.astro";
import "@/styles/icon.less";
import Comments from "@/components/comments/Comments.astro";
// import "@/styles/snowy.css";
import Common from "./Common.astro";

const { frontmatter } = Astro.props;
import Bar from "@/templates/Bar.astro";
import "@/styles/form.less";
const classes = frontmatter.resizable !== false ? ["resizable"] : [];
---

<style is:global is:inline>
  :root {
    color-scheme: light;
  }

  .paper {
    margin: auto;
    inline-size: 1024px;
    max-inline-size: calc(100vi - 2em);
    min-inline-size: 380px;
  }
  .resizable {
    resize: horizontal;
    /* overflow-x: hidden; */
  }
  .paper:not(.resizable) {
    overflow-x: auto;
  }

  @media (max-width: 480px) {
    .resizable {
      inline-size: 100%;
      max-inline-size: 100%;
      min-inline-size: 100%;
    }
  }

  section#comments {
    margin-block: 1em;
  }
</style>

<Bar theme="light" lang="zh-Hans" />
<Paper
  transitionName="main"
  padding={true}
  paper={frontmatter.paper !== false}
  classes={classes}
>
  <Common frontmatter={frontmatter}>
    <slot />
  </Common>
</Paper>

<section id="comments">
  <Paper padding={true} paper={true} classes={classes}>
    <Comments />
  </Paper>
</section>
