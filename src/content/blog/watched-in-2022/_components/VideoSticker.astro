---
export interface Props {
  src: string;
  height?: string;
  width?: string;
}

const { src, height, width } = Astro.props;
---

<video playsinline autoplay muted loop height={height} width={width}>
  {
    src.endsWith(".webm") ? (
      <source src={src} type="video/webm" />
    ) : (
      <source src={src} type="video/mp4" />
    )
  }
</video>
<style>
  video {
    object-fit: fill;
  }
</style>
